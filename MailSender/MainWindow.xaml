<Window x:Class="MailSender.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MailSender"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="MainWindowStyle.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="File">
                <MenuItem Header="Quit"/>
            </MenuItem>
        </Menu>
        <StatusBar DockPanel.Dock="Bottom">
            Ready
        </StatusBar>
        <TabControl>
            <TabItem Header="Layout Panel">
                <TabControl>
                    <TabItem Header="Grid">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="2*" MinHeight="30"/>
                                <RowDefinition Height="10*" MaxHeight="300"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*" MinWidth="200"/>
                                <ColumnDefinition Width="5*" MinWidth="500"/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Button Margin="10, 20, 30, 40"
                                        HorizontalAlignment="Left"
                                        BorderThickness="10,20,30,40"
                                        Padding="10,20,30,40"
                                        HorizontalContentAlignment="Stretch"
                                        VerticalContentAlignment="Stretch">
                                Button
                            </Button>
                            <Ellipse Grid.Column="1" Grid.Row="0" Grid.RowSpan="2" Fill="Gray">
                                <Ellipse.Effect>
                                    <DropShadowEffect ShadowDepth="5"/>
                                </Ellipse.Effect>
                            </Ellipse>
                            <UniformGrid Grid.Column="0" Grid.RowSpan="2"
                                             Grid.Row="0" Grid.ColumnSpan="2"
                                             Rows="1"
                                             Margin="20, 20"
                                             HorizontalAlignment="Right" VerticalAlignment="Bottom">
                                <Button Padding="60,15" Margin="10,0">Ok</Button>
                                <Button Margin="10,0">Cancel</Button>

                            </UniformGrid>
                        </Grid>
                    </TabItem>
                    <TabItem Header="StackPanel">
                        <StackPanel>
                            <Button Content="Content1" Style="{StaticResource AquamarineButtonStyle}"/>
                            <Button Content="Content2" HorizontalAlignment="Left" Margin="5, 0, 10, 15"/>
                            <Button Content="Content3" HorizontalAlignment="Center" Margin="0, 10, 0 ,0"/>
                            <TextBox>Username</TextBox>
                            <StackPanel Orientation="Horizontal">
                                <Ellipse Width="10" Height="10" Fill="Yellow"/>
                                <Rectangle Width=" 100" Fill="Green" Margin="5,5,5,5" RadiusX="2"/>
                                <Button Padding="15,5">
                                    <StackPanel Orientation="Horizontal">
                                        <Ellipse Width="5" Height="5" Fill="Cyan"/>
                                        <TextBlock Text="Button1"/>
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                        </StackPanel>
                    </TabItem>
                    <TabItem Header="DockPanel">
                        <DockPanel>
                            <Button DockPanel.Dock="Top">Top</Button>
                            <Button DockPanel.Dock="Bottom">Bottom</Button>
                            <Button DockPanel.Dock="Right">Right</Button>
                            <Button>Button</Button>
                            <TextBox DockPanel.Dock="Bottom">Bottom</TextBox>
                            <Ellipse Fill="Gray" Stroke="Black" StrokeThickness="3"></Ellipse>
                        </DockPanel>
                    </TabItem>
                    <TabItem Header="UniformGrid">
                        <UniformGrid Columns="2">
                            <Button>Content1</Button>
                            <Button>Content2</Button>
                            <Button>Content3</Button>
                            <Button>Content4</Button>
                            <TextBox>Text</TextBox>
                            <ProgressBar Value="30"/>
                            <WebBrowser Source="http://google.com"/>
                        </UniformGrid>
                    </TabItem>
                    <TabItem Header="WrapPanel">
                        <WrapPanel Margin="5" Orientation="Vertical">
                            <Button Margin="5,5" Padding="20,20">ButtonContent1</Button>
                            <Button Margin="5,5" Padding="20,20">ButtonContent2</Button>
                            <Button Margin="5,5" Padding="20,20">ButtonContent3</Button>
                            <Button Margin="5,5" Padding="20,20">ButtonContent4</Button>
                        </WrapPanel>
                    </TabItem>
                    <TabItem Header="Canvas">
                        <Canvas>
                            <Rectangle Canvas.Left="100" Canvas.Top="100" 
                                           Height="50" Width="50" Fill="DarkGray"/>
                        </Canvas>
                    </TabItem>
                    <!--<TabItem Header="VirtualizedStackPanel"/>-->
                </TabControl>
            </TabItem>
            <TabItem Header="Lists"/>
            <TabItem Header="Scheduler"/>
            <TabItem Header="Messages"/>
            <TabItem Header="Statistics"/>
        </TabControl>
    </DockPanel>
</Window>
