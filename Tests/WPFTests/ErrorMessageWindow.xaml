<Window x:Class="WPFTests.ErrorMessageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFTests"
        mc:Ignorable="d"
        Title="ErrorMessageWindow" Height="175" Width="399" WindowStyle="None" ResizeMode="NoResize" WindowStartupLocation="CenterOwner">
    <Grid>
        <Label x:Name="lDisplayError" Content="Ошибка" FontSize="25" HorizontalAlignment="Center" VerticalAlignment="Center" 
                FontFamily="Arial"   >
            <Label.Foreground>
                <LinearGradientBrush EndPoint="0.5,0.971" StartPoint="0.5,0.042">
                    <GradientStop Color="#7EFF2323" Offset="0" />
                    <GradientStop Color="Red" Offset="0.8" />
                    <GradientStop Color="#7EFF2323" Offset="1" />
                </LinearGradientBrush>
            </Label.Foreground>
        </Label>
        <Button x:Name="btnOK" Content="Ok" HorizontalAlignment="Center" Margin="0,136,0,0" VerticalAlignment="Top" Height="25" Width="80" Click="btnOK_Click"/>

    </Grid>
</Window>
